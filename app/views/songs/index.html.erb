<h1> List of Songs </h1>

<table style="width:70%" border="solid">
  <tr>
    <th>Song Names</th>
    <th>Artist</th>
    <th>Genre</th>
  </tr>
  <% @songs.each do |song| %>
  <tr>
    <td><p><%= link_to song.name, song_path(song) %></p></td>
    <td><%= link_to Artist.find(song.artist_id).name, artist_path(song.artist_id) %></td>
    <td><%= link_to Genre.find(song.genre_id).name, genre_path(song.genre_id) %></td>
  </tr>
  <% end %>
</table>
<br>

<%= button_to "Add New Song", new_song_path, html_options = { :method => :get} %>
<%= button_to "List Artists", artists_path, html_options = { :method => :get} %>
<%= button_to "List Genres", genres_path, html_options = { :method => :get} %>
