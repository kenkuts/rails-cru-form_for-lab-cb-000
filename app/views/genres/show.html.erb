<h1>Genre</h1>

<table style="width:50%" border="solid">
  <tr>
    <th><h1><%= @genre.name %></h1></th>
  </tr>
  <% @genre.songs.each do |song| %>
  <tr>
    <td><%= link_to song.name, song_path(song) %></td>
  </tr>
  <% end %>
</table>
<%= button_to "Edit Genre", edit_genre_path(@genre), html_options = { :method => :get } %>
<br>
<br>
<%= button_to "List Genres", genres_path, html_options = { :method => :get } %>
<%= button_to "List Artist", artists_path, html_options = { :method => :get } %>
<%= button_to "List Songs", songs_path, html_options = { :method => :get } %>
